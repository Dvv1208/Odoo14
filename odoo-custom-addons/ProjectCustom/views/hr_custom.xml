<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_project_custom_form_inherit" model="ir.ui.view">
            <field name="name">hr.employee.inherited</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='work_email']" position="after">
                        <field name="project_custom"/>
                </xpath>
            </field>
        </record>

        <record id="view_references_job_form_inherit" model="ir.ui.view">
            <field name="name">hr.employee.inherited</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='coach_id']" position="after">
                        <field name="references_job" />
                </xpath>
            </field>
        </record>

    </data>
</odoo>
